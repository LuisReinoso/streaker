{
  "name": "Streaker",
  "description": "GitHub contribution streak & stat tracking menu bar app",
  "version": "1.4.3",
  "author": "Jamie Weavis <jamie.weavis@gmail.com>",
  "bugs": {
    "url": "https://github.com/jamieweavis/streaker/issues"
  },
  "build": {
    "appId": "com.jamieweavis.streaker",
    "mac": {
      "darkModeSupport": true
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.7.2",
    "auto-launch": "^5.0.5",
    "bulma": "^0.7.4",
    "contribution": "^3.0.1",
    "cron": "^1.6.0",
    "electron-store": "^3.0.0"
  },
  "devDependencies": {
    "electron": "5.0.5",
    "electron-builder": "20.44.4",
    "eslint": "5.16.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2"
  },
  "homepage": "https://github.com/jamieweavis/streaker#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "contribution",
    "contribution-graph",
    "electron",
    "electron-app",
    "github",
    "macos",
    "menubar",
    "streak"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamieweavis/streaker.git"
  },
  "scripts": {
    "dist": "build -m -w",
    "format": "prettier --write 'src/**/*.{js,html}'",
    "lint": "eslint src",
    "pack": "build --dir",
    "start": "electron src/app.js"
  }
}
